
<div class="row" align="center">
  <div class="small-8">
    <h1 class="featured">New Restaurant</h1>
    <div class="row small-8">
      <%= form_for @restaurant do |f| %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :street %><br />
        <%= f.text_field :street %>
      </div>

      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :state %><br />
        <%= f.text_field :state %>
      </div>

      <div class="field">
        <%= f.label :zip %><br />
        <%= f.text_field :zip %>
      </div>


      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>

      <div class="actions">
        <%= f.submit "Add Restaurant", :class=> "button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>